<Window x:Class="KursovoiTuv.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Портал заказов" 
        Height="400" Width="350">

    <Border Margin="20" CornerRadius="10" Background="White">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ЗАГОЛОВОК -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="АВТОРИЗАЦИЯ" 
                          FontSize="18" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Text="Портал управления производством" 
                          FontSize="12" Foreground="Gray"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- ФОРМА АВТОРИЗАЦИИ -->
            <StackPanel Grid.Row="1">
                <!-- ЛОГИН -->
                <TextBlock Text="Логин:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                        Text="admin" 
                        Padding="10" 
                        FontSize="14"
                        BorderThickness="1" 
                        BorderBrush="#bdc3c7"
                        Margin="0,0,0,15"/>

                <!-- ПАРОЛЬ -->
                <TextBlock Text="Пароль:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                            Password="123" 
                            Padding="10" 
                            FontSize="14"
                            BorderThickness="1" 
                            BorderBrush="#bdc3c7"
                            Margin="0,0,0,20"/>

                <!-- Демо режим -->
                <Border Background="#ecf0f1" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                    <TextBlock Text="⚠️ Демо-режим: используйте любой логин/пароль" 
                              FontSize="11" Foreground="#7f8c8d" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <!-- КНОПКИ -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ВОЙТИ" 
                        Click="LoginButton_Click"
                        FontWeight="Bold"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        Cursor="Hand"/>

                <Button Content="ВЫХОД" 
                        Click="ExitButton_Click"
                        FontWeight="Bold"
                        Padding="20,10"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>