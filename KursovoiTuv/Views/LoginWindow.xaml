<Window x:Class="KursovoiTuv.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" 
        Height="350" 
        Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Вход в систему" 
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameBox" Text="admin" 
                     Margin="0,0,0,15" Padding="5"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Password="123" 
                         Margin="0,0,0,15" Padding="5"/>

            <!-- Сообщение об ошибке -->
            <TextBlock x:Name="ErrorText" Foreground="Red" 
                       Margin="0,0,0,10" Visibility="Collapsed"/>

            <!-- Демо данные -->
            <Border Background="#FFF0F0" Padding="10" CornerRadius="5">
                <TextBlock Text="Демо: admin/123" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Выход" x:Name="ExitButton"
                    Click="ExitButton_Click"
                    Margin="0,0,10,0" Padding="20,8"/>
            <Button Content="Войти" x:Name="LoginButton"
                    Click="LoginButton_Click"
                    IsDefault="True" Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>